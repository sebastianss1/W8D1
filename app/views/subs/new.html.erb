<h1>Create a new sub!</h1>

    <form action="<%= subs_url %>" method="POST">
         <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label>Name 
        <input name="sub[title]" value="<% @sub.title %>">
        </label>
        <br>
        <label>Description 
        <input name="sub[description]" value="<% @sub.description %>">
        </label>

        <button> Submit! </button>

    </form>



